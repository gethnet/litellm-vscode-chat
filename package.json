{
	"name": "litellm-connector-copilot",
	"publisher": "GethNet",
	"contributors": [
		"amwdrizz"
	],
	"maintainers": [
		"amwdrizz"
	],
	"displayName": "LiteLLM Connector for Copilot",
	"description": "An extension that integrates LiteLLM proxy into Copilot",
	"icon": "assets/logo.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/gethnet/litellm-vscode-chat"
	},
	"version": "1.0.11",
	"preview": true,
	"engines": {
		"vscode": "^1.107.0"
	},
	"categories": [
		"AI",
		"Chat",
		"Machine Learning",
		"Other"
	],
	"galleryBanner": {
		"color": "#100f11",
		"theme": "dark"
	},
	"badges": [
		{
			"url": "https://img.shields.io/github/stars/gethnet/litellm-vscode-chat?style=social",
			"description": "Star litellm-vscode-chat on Github",
			"href": "https://github.com/gethnet/litellm-vscode-chat"
		}
	],
	"homepage": "https://github.com/gethnet/litellm-vscode-chat",
	"bugs": {
		"url": "https://github.com/gethnet/litellm-vscode-chat/issues"
	},
	"license": "Apache-2.0",
	"activationEvents": [
		"onLanguageModelChatProvider:litellm-connector"
	],
	"contributes": {
		"languageModelChatProviders": [
			{
				"vendor": "litellm-connector",
				"displayName": "LiteLLM",
				"managementCommand": "litellm-connector.manage"
			}
		],
		"commands": [
			{
				"command": "litellm-connector.manage",
				"title": "Manage LiteLLM Provider"
			}
		]
	},
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"vscode:pack": "npx vsce package",
		"download-api": "dts dev",
		"postdownload-api": "yes n | dts main && node -e \"const fs = require('fs'); if (fs.existsSync('vscode.d.ts')) { fs.renameSync('vscode.d.ts', 'src/vscode.d.ts'); console.log('Moved vscode.d.ts to src/'); }\"",
		"postinstall": "npm run download-api",
		"prepare": "husky install",
		"compile": "tsc -p ./",
		"lint": "eslint --fix",
		"format": "prettier --write .",
		"watch": "tsc -watch -p ./",
		"test": "tsc -p ./ && xvfb-run vscode-test",
		"test:report": "export VSCODE_TEST_RESULTS_DIR=$PWD/test-results && mkdir -p $VSCODE_TEST_RESULTS_DIR && npm run test",
		"test:coverage": "tsc -p ./ && node -e \"const fs = require('fs'); const path = require('path'); const coveragePath = path.join(process.cwd(), 'coverage'); if (fs.existsSync(coveragePath)) fs.rmSync(coveragePath, { recursive: true, force: true });\" && export VSCODE_TEST_RESULTS_DIR=$PWD/test-results && mkdir -p $VSCODE_TEST_RESULTS_DIR && xvfb-run vscode-test --coverage --coverage-output coverage --coverage-reporter lcovonly --coverage-reporter html --coverage-reporter text-summary",
		"bump-version": "node scripts/bump-version.js"
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^5.7.1",
		"@types/mocha": "^10.0.6",
		"@types/node": "^22",
		"@types/sinon": "^21.0.0",
		"@types/vscode": "^1.104.0",
		"@vscode/dts": "^0.4.1",
		"@vscode/test-cli": "^0.0.12",
		"@vscode/test-electron": "^2.5.2",
		"@vscode/vsce": "^3.7.0",
		"all-contributors-cli": "^6.26.1",
		"eslint": "^9.13.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"mocha-junit-reporter": "^2.2.1",
		"mocha-multi-reporters": "^1.5.0",
		"prettier": "^3.1.0",
		"rimraf": "^6.0.1",
		"sinon": "^21.0.1",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.39.0"
	},
	"extensionDependencies": [
		"github.copilot-chat"
	],
	"lint-staged": {
		"*.{ts,js,json,md}": [
			"npm run format",
			"npm run lint"
		]
	}
}
